# Test Environment Configuration for X.com Bot Template
# Copy this file to .env.test for testing

# =============================================================================
# TEST CONFIGURATION
# =============================================================================
NODE_ENV=test
TEST_MODE=true
DEBUG=true

# =============================================================================
# MOCK API KEYS (for testing only)
# =============================================================================
TWITTER_API_KEY=test_twitter_api_key
TWITTER_API_SECRET=test_twitter_api_secret
TWITTER_ACCESS_TOKEN=test_twitter_access_token
TWITTER_ACCESS_SECRET=test_twitter_access_secret
OPENAI_API_KEY=test_openai_api_key

# =============================================================================
# TEST BOT SETTINGS
# =============================================================================
BOT_NAME=test-template-bot
POSTING_SCHEDULE=0 9 * * *
DATABASE_PATH=./data/test-template-bot.db

# =============================================================================
# TEST LOGGING
# =============================================================================
LOG_LEVEL=debug
ENABLE_DETAILED_LOGGING=true
LOG_FILE_PATH=./logs/test-combined.log
ERROR_LOG_FILE_PATH=./logs/test-error.log

# =============================================================================
# TEST SECURITY
# =============================================================================
ENABLE_AUTH=false
HEALTH_USERNAME=test
HEALTH_PASSWORD=test_password

# =============================================================================
# TEST CONTENT
# =============================================================================
POSTS_PER_TOPIC=5
MAX_POST_LENGTH=280
MIN_POST_LENGTH=50

# =============================================================================
# TEST RATE LIMITS
# =============================================================================
TWITTER_RATE_LIMIT=10
OPENAI_RATE_LIMIT=10
