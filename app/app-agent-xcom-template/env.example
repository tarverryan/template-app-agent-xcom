# X.com Bot Template Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# TWITTER API CONFIGURATION
# =============================================================================
# Get these from https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# =============================================================================
# OPENAI API CONFIGURATION
# =============================================================================
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# BOT CONFIGURATION
# =============================================================================
# Bot name for identification
BOT_NAME=template-bot

# Posting schedule (cron format)
# Examples:
# 0 9 * * *     - Daily at 9 AM
# 0 */6 * * *   - Every 6 hours
# 0 10 * * 1-5  - Weekdays at 10 AM
POSTING_SCHEDULE=0 9 * * *

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment (development, production, test)
NODE_ENV=development

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Port for health monitoring
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database file path (relative to app directory)
DATABASE_PATH=./data/template-bot.db

# =============================================================================
# RATE LIMITING
# =============================================================================
# Twitter API rate limits (tweets per 3 hours)
TWITTER_RATE_LIMIT=300

# OpenAI API rate limits (requests per minute)
OPENAI_RATE_LIMIT=100

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable authentication for health endpoints (true/false)
ENABLE_AUTH=false

# Health endpoint username (if authentication enabled)
HEALTH_USERNAME=admin

# Health endpoint password (if authentication enabled)
HEALTH_PASSWORD=your_secure_password_here

# =============================================================================
# CONTENT GENERATION
# =============================================================================
# Number of posts to generate per topic
POSTS_PER_TOPIC=10

# Maximum post length (Twitter limit is 280)
MAX_POST_LENGTH=280

# Minimum post length
MIN_POST_LENGTH=50

# =============================================================================
# MONITORING
# =============================================================================
# Enable detailed logging (true/false)
ENABLE_DETAILED_LOGGING=true

# Log file path
LOG_FILE_PATH=./logs/combined.log

# Error log file path
ERROR_LOG_FILE_PATH=./logs/error.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode (development only)
DEBUG=false

# Enable test mode
TEST_MODE=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit your actual .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different API keys for development and production
# 4. Monitor your API usage to avoid rate limits
# 5. Test your configuration before deploying to production
